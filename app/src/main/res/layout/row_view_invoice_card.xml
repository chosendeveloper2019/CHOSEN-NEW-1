    android:background="#FFF"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_card_id"
            android:text="CEBBDD00"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_create_at"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:text="XXXXXXXXXXXXXXXXXXX"
            android:textSize="14sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_marginLeft="10dp"
            android:text="7999.2"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_width="66dp"
            android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_view"
                android:text="View"
                android:textColor="#FFF"
                android:textSize="8sp"
                android:backgroundTint="@color/bootstrap_brand_warning"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button_view"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/btn_pay"
                android:layout_marginLeft="10dp"
                android:text="PAY"
                android:textSize="8sp"
                android:textColor="#FFF"
                android:background="@drawable/round_button_pay"
                android:backgroundTint="@color/bootstrap_brand_primary"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>



