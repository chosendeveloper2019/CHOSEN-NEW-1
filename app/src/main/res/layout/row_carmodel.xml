<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_car"
            android:src="@drawable/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textStyle="bold"
                    android:layout_width="80dp"
                    android:textAlignment="textEnd"

                    android:layout_height="wrap_content"
                    android:text="@string/tv_brands_detail" />
                <TextView
                    android:id="@+id/tv_brands"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_brands_tb" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="80dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_lbl_Carmodel" />
                <TextView
                    android:id="@+id/tv_carmodel"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HELLO" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_select"
                android:backgroundTint="@color/bootstrap_brand_info"
                android:paddingLeft="12dp"
                android:textSize="12sp"
                android:textColor="#FFF"
                android:drawableLeft="@drawable/ic_reserve"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>